<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <queries>
        <package android:name="com.google.android.apps.maps" />
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.100NTS"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.sites.SitesActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.sites.SiteDetailsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.user.UserActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.user.UserEditActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.user.UserRankingActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.sites.CommentsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.user.ConfirmCodeActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.user.ResetPasswordActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.admin.AdminActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.admin.AddEditSiteActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.admin.ChangeUserRoleActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.error.ErrorActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>